@model IEnumerable<CRUDnativo.Models.Productos>
<h1>Lista de productos</h1>
<a asp-action="Create" asp-controller="Product">Crear nuevo producto</a>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p => p.Nombre)</th>
            <th>@Html.DisplayNameFor(p => p.precio)</th>
            <th>@Html.DisplayNameFor(p => p.Cantidad)</th>
            <th>@Html.DisplayNameFor(p => p.FechaCreacion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.precio</td>
                <td>@producto.Cantidad</td>
                <td>@producto.FechaCreacion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producto">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
