@model AngieGiraldo.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
}

<h1 class="text-danger">Eliminar Venta</h1>

<h3>¿Está seguro de que desea eliminar esta venta?</h3>
<hr />

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">ID Venta</dt>
        <dt class="col-sm-3">Cantidad</dt>
        <dd class="col-sm-9">@Model.Cantidad</dd>

        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@Model.Total</dd>

        <dt class="col-sm-3">Fecha de Venta</dt>
        <dd class="col-sm-9">@Model.FechaVenta</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
